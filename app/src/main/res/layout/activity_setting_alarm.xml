    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_head_background_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/frequency_head"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_head_height"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/list_head_padding_left"
            android:text="@string/switch_time_frequency"
            android:textColor="@color/edit_text_color"
            android:textSize="@dimen/list_head_text_size" />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/widget_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:listPreferredItemHeight"
        android:paddingEnd="@dimen/list_item_padding_left_right"
        android:paddingStart="@dimen/list_item_padding_left_right">


        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.0dip"
            android:layout_marginEnd="0.0dip"
            android:layout_marginStart="0.0dip"
            android:layout_marginTop="6.0dip"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/onceT"
                style="@style/ListItemSummaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/switch_once" />

        </RelativeLayout>

        <RadioButton
            android:id="@+id/onceR"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="3.0dip"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:listPreferredItemHeight"
        android:paddingEnd="@dimen/list_item_padding_left_right"
        android:paddingStart="@dimen/list_item_padding_left_right">


        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.0dip"
            android:layout_marginEnd="0.0dip"
            android:layout_marginStart="0.0dip"
            android:layout_marginTop="6.0dip"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/everydayT"
                style="@style/ListItemSummaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/switch_every_day" />

        </RelativeLayout>

        <RadioButton
            android:id="@+id/everydayR"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="3.0dip"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:listPreferredItemHeight"
        android:paddingEnd="@dimen/list_item_padding_left_right"
        android:paddingStart="@dimen/list_item_padding_left_right">


        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.0dip"
            android:layout_marginEnd="0.0dip"
            android:layout_marginStart="0.0dip"
            android:layout_marginTop="6.0dip"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/weekdayT"
                style="@style/ListItemSummaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/switch_week_day" />

        </RelativeLayout>

        <RadioButton
            android:id="@+id/weekdayR"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="3.0dip"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:listPreferredItemHeight"
        android:paddingEnd="@dimen/list_item_padding_left_right"
        android:paddingStart="@dimen/list_item_padding_left_right">


        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.0dip"
            android:layout_marginEnd="0.0dip"
            android:layout_marginStart="0.0dip"
            android:layout_marginTop="6.0dip"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/weekendT"
                style="@style/ListItemSummaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/switch_week_end" />

        </RelativeLayout>

        <RadioButton
            android:id="@+id/weekendR"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="3.0dip"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>
